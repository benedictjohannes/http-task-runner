{
  "$ref": "#/definitions/ConfigSchema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ConfigSchema": {
      "additionalProperties": false,
      "properties": {
        "AppName": {
          "type": "string"
        },
        "Listen": {
          "type": "string"
        },
        "RoutePrefix": {
          "type": "string"
        },
        "Tasks": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "Args": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "MaxRunSeconds": {
                "description": "defaults to 60 seconds",
                "type": "number"
              },
              "RunnerExecutable": {
                "type": "string"
              },
              "TaskKey": {
                "description": "Optional, unique, must be `0-9a-zA-Z-_.`, used for logs entries. When not set, the task logging is disabled and does not appear in logs list HTML.",
                "type": "string"
              },
              "Tests": {
                "additionalProperties": false,
                "properties": {
                  "Header": {
                    "type": "object"
                  },
                  "JSONBody": {
                    "items": {
                      "additionalProperties": false,
                      "properties": {
                        "Key": {
                          "type": "string"
                        },
                        "Value": {
                          "type": [
                            "string",
                            "number",
                            "boolean"
                          ]
                        }
                      },
                      "required": [
                        "Key",
                        "Value"
                      ],
                      "type": "object"
                    },
                    "type": "array"
                  }
                },
                "type": "object"
              },
              "WebhookRoute": {
                "description": "Optional, must be `0-9a-zA-Z-_.`, registers the route `{{RoutePrefix}}/tasks/{{Route}}`. When not set, the task webhook is disabled.",
                "type": "string"
              }
            },
            "required": [
              "RunnerExecutable",
              "Args",
              "Tests"
            ],
            "type": "object"
          },
          "type": "array"
        }
      },
      "required": [
        "Listen",
        "AppName",
        "RoutePrefix",
        "Tasks"
      ],
      "type": "object"
    }
  }
}
